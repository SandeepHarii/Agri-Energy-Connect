@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="wrapper mx-auto">
        <section>
            <h2 class="text-center mb-3">Login</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="Wrapper">
                <form id="account" method="post">
                    <div class="mb-3 input-with-icon">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <i class='bx bxs-envelope'></i>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 input-with-icon">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                        <i class='bx bxs-lock-alt'></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="remember-forgot mb-3 d-flex justify-content-between align-items-center">
                        <label asp-for="Input.RememberMe" class="form-label d-flex align-items-center">
                            <input class="form-check-input me-1" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                        <a class="btn btn-link p-0" id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                    </div>

                    <div class="row mb-3">
                        <div class="col d-grid">
                            <button class="btn btn-primary rounded" type="submit">Login</button>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <a class="btn btn-outline-primary rounded flex-grow-1" href="/" role="button">Cancel</a>
                    </div>

                    <div class="register-link text-center mb-3 mt-3">
                        <p>Don't have an account? <a href="/Identity/Account/Register">Register</a></p>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
