@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset - AgriEnergyConnect";
}

<div class="row">
    <div class="wrapper mx-auto">
        <section>
            <h2 class="text-center mb-3">Password Reset Successful</h2>
            <hr />

            <div class="Wrapper text-center">
                <p class="lead">Your password has been updated.</p>
                <p>You can now log in with your new password.</p>

                <div class="d-grid gap-2 mt-4">
                    <a class="btn btn-primary rounded" href="/Identity/Account/Login">Login</a>
                </div>
            </div>
        </section>
    </div>
</div>
