@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="wrapper mx-auto">
        <h2 class="text-center mb-4">Register</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <form id="registerForm" method="post">
            <!-- First Name -->
            <div class="input-with-icon mb-3">
                <input class="form-control" asp-for="Input.FirstName" placeholder="First Name" />
                <i class="bx bx-user"></i>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="input-with-icon mb-3">
                <input class="form-control" asp-for="Input.LastName" placeholder="Last Name" />
                <i class="bx bx-user"></i>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="input-with-icon mb-3">
                <input class="form-control" asp-for="Input.PhoneNumber" placeholder="Phone Number" />
                <i class="bx bx-phone"></i>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Email Address -->
            <div class="input-with-icon mb-3">
                <input class="form-control" asp-for="Input.Email" placeholder="Email Address" />
                <i class="bx bx-envelope"></i>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Role Dropdown -->
            <div class="input-with-icon mb-3">
                <select class="form-control" asp-for="Input.UserType">
                    <option value="">Select Role</option>
                    <option value="Farmer">Farmer</option>
                    <option value="Employee">Employee</option>
                </select>
                <span asp-validation-for="Input.UserType" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="input-with-icon mb-3">
                <input class="form-control" asp-for="Input.Password" placeholder="Password" type="password" />
                <i class="bx bx-lock-alt"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="input-with-icon mb-4">
                <input class="form-control" asp-for="Input.ConfirmPassword" placeholder="Confirm Password" type="password" />
                <i class="bx bx-lock-alt"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>


            <!-- Buttons -->
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary rounded flex-grow-1">Register</button>
            </div>

            <p></p>

            <div class="d-flex gap-3">
                <a class="btn btn-outline-primary rounded flex-grow-1" href="/" role="button">Cancel</a>
            </div>

            <p></p>

            <div class="register-link text-center mb-3">
                <p>Already have an account? <a href="/Identity/Account/Login">Login</a></p>

            </div>
        </form>
    </div>
</div>
