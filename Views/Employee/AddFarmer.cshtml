@using AgriEnergyConnect.ViewModels;
@model AddFarmerViewModel

@{
    ViewData["Title"] = "Add Farmer - AgriEnergyConnect";
}

<div class="row">
    <div class="wrapper mx-auto">
        <section>
            <h2 class="text-center mb-3">Add Farmer</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="Wrapper">
                <form asp-action="AddFarmer" method="post">
                    <div class="mb-3 input-with-icon">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <i class='bx bx-user'></i>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 input-with-icon">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <i class='bx bx-user'></i>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 input-with-icon">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <i class='bx bxs-envelope'></i>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3 input-with-icon">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <i class='bx bxs-phone'></i>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3 input-with-icon">
                        <input asp-for="Password" id ="passwordInput" class="form-control" placeholder="Password" type="password" />
                        <i class='bx bx-show position-absolute end-0 top-50 translate-middle-y me-3 cursor-pointer' id="togglePassword" style="z-index: 2;"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col d-grid">
                            <button class="btn btn-primary rounded" type="submit">Create Farmer</button>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col d-grid">
                            <a class="btn btn-outline-primary rounded" href="@Url.Action("Dashboard", "Employee")" class="text-muted">Back to Dashboard</a>
                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const togglePassword = document.getElementById("togglePassword");
                const passwordInput = document.getElementById("passwordInput");

                togglePassword.addEventListener("click", function () {
                    const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
                    passwordInput.setAttribute("type", type);
                    this.classList.toggle("bx-show");
                    this.classList.toggle("bx-hide");
                });
            });
        </script>

    }

}
