@using AgriEnergyConnect.ViewModels;
@model ProductFilterViewModel

@{
    ViewData["Title"] = "All Products";
}

<h2>All Farmer Products</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by Product Name, Farmer, or Price" />
        <button class="btn btn-outline-primary" type="submit">Search</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("ViewProducts", "Employee")">Clear</a>
    </div>
</form>


@if (Model.Products.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Price</th>
                <th>Farmer</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@($"{product.Farmer.FirstName} {product.Farmer.LastName}")</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
