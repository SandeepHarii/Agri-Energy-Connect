@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container mx-auto">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Farmer Dashboard</h1>
            <p>
                Empowering farmers to connect, sell produce, and contribute to sustainable energy solutions.
            </p>
        </div>
    </section>

    <!-- Feature Cards -->
    <div class="card-container">
        <div class="card">
            <div class="card-icon">
                <i class="bx bx-plus-circle"></i> <!-- Relevant icon for Login -->
            </div>
            <div class="card-content">
                <h2>Add New Product</h2>
                <p>List your agricultural produce to share with energy companies or local markets.</p>
                <a href="/Farmer/AddProduct" class="btn-action">
                    <i class="bx bx-plus-circle"></i> Add Product
                </a>
            </div>
        </div>
        <div class="card">
            <div class="card-icon">
                <i class="bx bx-show-alt"></i> <!-- Relevant icon for Register -->
            </div>
            <div class="card-content">
                <h2>
                    View My Products
                </h2>
                <p>Track and manage your listed products and monitor interest or purchases.</p>
                <a href="/Farmer/ViewProducts" class="btn-action">
                    <i class="bx bx-show-alt"></i> View Product Listings
                </a>
            </div>
        </div>
    </div>
</div>
