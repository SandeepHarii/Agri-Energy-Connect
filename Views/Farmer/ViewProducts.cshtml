@model IEnumerable<Product>

@{
    ViewData["Title"] = "View Products - AgriEnergyConnect";
}

<div class="w-100 px-4 py-5" style="background-color: #F5F5F5;">
    <div class="card shadow-sm border-0 w-100" style="background-color: #FFFFFF; border-left: 5px solid #2E8B57;">
        <div class="card-body">
            <h2 class="text-center mb-4" style="color: #2E8B57;">Your Products</h2>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered align-middle shadow-sm w-100" style="background-color: #FFFFFF;">
                        <thead style="background-color: #4682B4; color: white;">
                            <tr>
                                <th>Product</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (product, index) in Model.Select((value, i) => (value, i)))
                            {
                                <tr class="@(index % 2 == 0 ? "table-light" : "table-custom")">
                                    <td>@product.Name</td>
                                    <td>@product.Description</td>
                                    <td>@product.Price.ToString("C")</td>
                                    <td class="d-flex gap-2">
                                        <a href="@Url.Action("EditProduct", new { id = product.ProductID })" class="btn btn-success btn-sm d-flex align-items-center gap-1 p-2">
                                            <i class="bx bx-pencil"></i> Edit
                                        </a>
                                        <a href="@Url.Action("DeleteProduct", new { id = product.ProductID })" class="btn btn-danger btn-sm d-flex align-items-center gap-1 p-2">
                                            <i class="bx bx-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex gap-3 mb-3">
                        <a href="@Url.Action("AddProduct", "Farmer")" class="btn-farmy-filled">
                            Add Product
                        </a>
                    </div>

                    <div class="d-flex gap-3">
                        <a class="btn btn-outline-primary rounded flex-grow-1" href="@Url.Action("Dashboard", "Farmer")" role="button">Back to Dashboard</a>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted text-center mt-4">No products found.</p>

                <div class="d-flex gap-3">
                    <a class="btn btn-outline-primary rounded flex-grow-1" href="@Url.Action("Dashboard", "Farmer")" role="button">Back to Dashboard</a>
                </div>
            }
        </div>
    </div>
</div>